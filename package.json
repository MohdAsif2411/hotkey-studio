{
  "name": "autohotkey-gui-wrapper",
  "version": "0.1.0",
  "description": "Modern Electron-based GUI wrapper for AutoHotkey v2 with Angular 21",
  "license": "MIT",
  "author": "Your Name",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "npm run build:electron && electron .",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:angular": "cd src && npm run build",
    "build": "npm run build:electron && npm run build:angular",
    "dev": "concurrently \"npm run watch:electron\" \"npm run dev:angular\"",
    "watch:electron": "tsc -p electron/tsconfig.json --watch",
    "dev:angular": "cd src && npm start",
    "package": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.autohotkey.gui",
    "productName": "AutoHotkey GUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    }
  }
}